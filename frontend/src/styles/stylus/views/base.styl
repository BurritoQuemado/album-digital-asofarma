html
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale


body
    font-family: 'avenir'
    font-weight: normal
    font-size 15px
    &.padding
        padding-left: 40px
        +mobile()
            padding-left: 28px
h1, h2, h3
    font-family: 'antenna';
    font-weight: bold


.nav-link
    .badge
        font-size 1em
        font-family: 'antenna'

.bg-welcome
    background: $light-grey
    color $primary

.bg-dark
    background: $black

.text-dark
    color: $black
