@import '~styles/stylus/mixins'
@import '~styles/stylus/colors'

$gutter = 24px

@lost gutter 24px
@lost flexbox no-flex
@lost cycle auto

// Breakpoints
$center = 1024px
$mobile = 576px
$tablet = 768px
$desktop = 992px

$base-line-height ?= 1.5
$base-font-size ?= 12px

rupture.mobile-cutoff = $mobile
rupture.desktop-cutoff = $center
rupture.hd-cutoff = $desktop
