.header-description
    padding 20px 30px
    background: rgba($white, 0.6)
    p
        font-family: 'antenna'
        font-size 1em
    h2
        font-family: 'avenir'
        font-weight: bold
        color $primary

.nav-item
    p
        margin 0

.Cover
    min-height calc(100vh - 60px)
    .row
        flex-direction: column;
    &--Header
        margin 0 auto
        lost-utility clearfix
        img
            width 100%
            max-width 120px
    &--Logo
        lost-utility clearfix
        margin 20px auto
        img
            width 100%
            max-width 250px
    &--User
        text-align: center
        font-family: 'din'
        font-weight: bold
        color: $white
        text-transform: uppercase
        margin 150px auto 0 auto
        padding: 25px 30px
        .Title
            font-size 2em
        .Progress
            font-size 1.2em
            color $primary
        p
            margin 0
    &--Logos
        lost-utility clearfix
        margin 20px auto
        img
            width 100%
            max-width 400px
    &--Aeromexico
        lost-utility clearfix
        margin 0px auto
        background: #D1D3D4
        padding: 20px 30px
        width 100%
        img
            max-width 200px
            margin 0px auto
            display: block

@keyframes glowing {
  0% { box-shadow: 0 0 -20px #ffeb3b; }
  40% { box-shadow: 0 0 100px #ffeb3b; }
  60% { box-shadow: 0 0 100px #ffeb3b; }
  100% { box-shadow: 0 0 -20px #ffeb3b; }
}

.Card
    &--Full
        size 100%
        position relative
        &--Footer
            background: rgba($white, 0.8)
            padding: 10px 15px
            font-size 10px
            font-weight: bold
            text-transform: uppercase
            font-family: 'din'
        &--Body
            position: absolute
            top: 0
            left: 0
            width 100%
            &.NewCard
                svg, .CardPhoto
                    animation: glowing 2000ms infinite
            &--Title
                position absolute
                left 20px
                top 88%
                color $black
                z-index 10
                width: 68%
                p
                    margin 0
                    letter-spacing: -0.1px
                    font-family: 'antenna'
                    &.title
                        font-size: 11px;
                        font-weight: bold;
                        line-height: 10px;
                        margin: 0;
                        border-bottom 1px solid $black
                        padding-bottom 2px
                    &.department
                        font-size: 10px;
                        margin: 0;
                        font-weight: bold;
                        color $grey
                    &.description
                        font-size: 9px;
                        margin: 0;
                        text-transform: capitalize;
                        line-height: 1px;
                        color $grey
            &--Quantity
                position: absolute
                top: -10px
                right: -10px
                border-radius: 50%
                size 50px
                z-index 11
                background $primary
                cursor pointer
                span
                    center both
                    color $white
                    font-weight: bold
                    font-size 1.2em
            &--Back
                width: 100%
                position absolute
                top: 0
                left: 0
                z-index 10
                &--Ribbon
                    position: absolute
                    top 1px
                    right 1px
                    width 18%
                &--Photo
                    border 2px solid $black
                    position: absolute
                    left 0
                    top: 0
                    width: 100%
                svg
                    border 2px solid $black
                    position: absolute
                    left 0
                    top: 0
                    width: 100%
        &:before
            content: ''
            padding-top: 128%
            display: block

    &--Empty
        size 100%
        position relative
        &--Body
            position: absolute
            top: 0
            left: 0
            width 100%
            &--Back
                width: 100%
                position absolute
                top: 0
                left: 0
                z-index 10
                svg
                    border 2px solid $black
                    position: absolute
                    left 0
                    top: 0
                    width: 100%
            &--Shield
                width: 60%
                position absolute
                center both
                color $black
                z-index 10
                svg
                    position: absolute
                    left 0
                    center vertical
                    width: 100%
            &--Title
                position absolute
                center both
                color $black
                z-index 10
            &--Name
                center both
                top 88%
                color $black
                z-index 10
                font-weight: bold
                text-align center
                width: 75%
                font-size 12px
                line-height: 12px
        &:before
            content: ''
            padding-top: 130%
            display: block
