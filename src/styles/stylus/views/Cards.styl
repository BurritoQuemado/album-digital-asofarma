.Card
    &--Full
        size 100%
        position relative
        &--Body
            position: absolute
            top: 0
            left: 0
            width 100%
            &--Title
                position absolute
                left 20px
                top 88%
                color $black
                z-index 10
                width: 68%
                p
                    margin 0
                    letter-spacing: -0.1px
                    font-family: 'antenna'
                    &.title
                        font-size: 11px;
                        font-weight: bold;
                        line-height: 10px;
                        margin: 0;
                        border-bottom 1px solid $black
                        padding-bottom 2px
                    &.department
                        font-size: 10px;
                        margin: 0;
                        font-weight: bold;
                        color $grey
                    &.description
                        font-size: 9px;
                        margin: 0;
                        text-transform: capitalize;
                        line-height: 1px;
                        color $grey
            &--Back
                width: 100%
                position absolute
                top: 0
                left: 0
                z-index 10
                svg
                    border 2px solid $black
                    position: absolute
                    left 0
                    top: 0
                    width: 100%
        &:before
            content: ''
            padding-top: 128%
            display: block

    &--Empty
        size 100%
        position relative
        &--Body
            position: absolute
            top: 0
            left: 0
            width 100%
            &--Back
                width: 100%
                position absolute
                top: 0
                left: 0
                z-index 10
                svg
                    border 2px solid $black
                    position: absolute
                    left 0
                    top: 0
                    width: 100%
            &--Shield
                width: 60%
                position absolute
                center both
                color $black
                z-index 10
                svg
                    position: absolute
                    left 0
                    center vertical
                    width: 100%
            &--Title
                position absolute
                center both
                color $black
                z-index 10
            &--Name
                center both
                top 88%
                color $black
                z-index 10
                font-weight: bold
                text-align center
                width: 75%
                font-size 12px
                line-height: 12px
        &:before
            content: ''
            padding-top: 130%
            display: block
